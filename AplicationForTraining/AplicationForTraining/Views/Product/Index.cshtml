@model ApplicationForTrainingWEB.Application.ViewModels.ProductVm.ListProductForListVM

@{
    ViewBag.Title = "Product database";
    Layout = "_Layout";
}

<h1>Product database</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="AddProduct">Create a new product</a>
    </p>
}

<form asp-action="Index" asp-controller="Product" method="post">
    <div class="row">
        <input type="text" asp-for="SearchString" name="searchString" id="searchString" class="form-control" placeholder="Search for a product" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelProduct => product.Name)
                        </td>
                        <td>
                            @if ((ViewBag.IsAdmin as bool? == true) || product.UserId == (string)ViewBag.UserId)
                            {
                                @Html.ActionLink("Edit", "EditProduct", new { id = product.Id })
                            }
                            @Html.ActionLink("Details", "Details", new { id = product.Id }, new { @class = "btn btn-details" }) <!-- Użycie nowej klasy -->
                            @if ((ViewBag.IsAdmin as bool? == true) || product.UserId == (string)ViewBag.UserId)
                            {
                                @Html.ActionLink("Delete", "Delete", new { id = product.Id })
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <div class="col-md-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                @if (i != Model.CurrentPage)
                                {
                                    <a href="javascript:PagerClick(@i)" class="page-link">@i</a>
                                }
                                else
                                {
                                    <span class="page-link">@i</span>
                                }
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
        <input type="hidden" name="pageNo" id="pageNo" />
        <input type="hidden" name="pageSize" id="pageSize" value="5" />
    </div>
</form>

@section Scripts
{
    <script type="text/javascript">
        function PagerClick(index) {
            document.getElementById("pageNo").value = index;
            document.forms[0].submit();
        }
    </script>
}